# ----- Compose-wide (safe to commit) -----
COMPOSE_PROJECT_NAME=real-time-streaming
KAFKA_BROKER_ID=1
KAFKA_OUTSIDE_PORT=9094

# ----- MinIO (S3-compatible) -----
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_32CHARS
# (dev only) Static KMS key for SSE-S3
# MINIO_KMS_SECRET_KEY=mykey:BASE64_32BYTE_KEY

# ----- MariaDB (Hive Metastore) -----
MARIADB_DATABASE=hive_metastore
MARIADB_USER=hive
MARIADB_PASSWORD=CHANGE_ME
MARIADB_ROOT_PASSWORD=CHANGE_ME_ROOT

# ----- MongoDB -----
MONGO_INITDB_ROOT_USERNAME=mongouser
MONGO_INITDB_ROOT_PASSWORD=CHANGE_ME

# ----- Marquez (Postgres) -----
POSTGRES_DB=marquez
POSTGRES_USER=marquez
POSTGRES_PASSWORD=CHANGE_ME

MARQUEZ_DB_URL=jdbc:postgresql://marquez-db:5432/marquez
